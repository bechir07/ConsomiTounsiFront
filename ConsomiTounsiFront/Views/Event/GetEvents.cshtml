@model IEnumerable<ConsomiTounsiFront.Models.Event>

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <!-- Advanced Tables -->
        <div class="panel panel-default">
            <div class="panel-heading">
                Advanced Tables
            </div>
            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <thead>
                            <tr>
                                <th>Image</th>
                                <th>Name</th>
                                <th>Description</th>
                                <th>Place</th>
                                <th>Date</th>
                                <th>Stats</th>
                                <th>Delete</th>
                                <th>Edit</th>


                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                            <tr class="odd gradeX">
                                <td><img src="~/Content/Upload/@Html.DisplayFor(modelItem => item.imagename)"></td>
                                <td>@Html.DisplayFor(modelItem => item.name)</td>
                                <td>@Html.DisplayFor(modelItem => item.description)</td>
                                <td>@Html.DisplayFor(modelItem => item.lieu)</td>
                                <td class="center">@Html.DisplayFor(modelItem => item.dateev)</td>
                                <td class="center">@Html.ActionLink("Stats", "GetNbreParticipation", "Event", new { id = item.id }, new { @class = "btn btn-primary" })</td>
                                <td class="center">@Html.ActionLink("Delete", "DeleteEvent", "Event", new { id = item.id }, new { @class = "btn btn-danger" })</td>
                                <td class="center">@Html.ActionLink("Edit", "EditEvent", "Event", new { id = item.id }, new { @class = "btn btn-warning" })</td>

                            </tr>
                            }
                        </tbody>
                    </table>
                    
                        <a href="@Url.Action("GetMaxParticipationForEvent", "Event")" class="btn btn-info" style="margin-left:1090px;margin-bottom:1;">Max</a> <a href="@Url.Action("GetEventSortedByParticipation", "Event")" class="btn btn-warning" style="margin-left:1090px;margin-top:400;">Sort</a>

                    



                </div>
            

        </div>
        <!--End Advanced Tables -->
    </div>
</div>
</div>