@model IEnumerable<ConsomiTounsiFront.Models.Donation>

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <!-- Advanced Tables -->
        <div class="panel panel-default">
            <div class="panel-heading">
                Advanced Tables
            </div>
            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <thead>
                            <tr>
                                <th>@Html.DisplayNameFor(model => model.name)</th>
                                <th>@Html.DisplayNameFor(model => model.montant)</th>
                                <th>Stats</th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr class="odd gradeX">
                                    <td>@Html.DisplayFor(modelItem => item.name)</td>
                                    <td>@Html.DisplayFor(modelItem => item.montant)</td>
                                    <td>@Html.DisplayFor(modelItem => item.jname)</td>
                                </tr>
                            }
                        </tbody>
                    </table>

                </div>
                <a href="@Url.Action("GetUsersSortedBySumDonation", "Donation")" class="btn btn-success" style="margin-left:1090px;margin-bottom:20;">Sort</a>
            </div>

        </div>
        <!--End Advanced Tables -->
    </div>
</div>
