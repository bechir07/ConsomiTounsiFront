@model ConsomiTounsiFront.Models.reclamation

@{
    ViewBag.Title = "Ajouter une réclamation!";
}

<h2>Create</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>reclamation</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            <div class="col-md-10">
                @Html.HiddenFor(model => model.decision, htmlAttributes: new { @class = "control-label col-md-2", @Value = "Pending", @disabled = "disabled" })
                @Html.ValidationMessageFor(model => model.decision, "", new { @class = "text-danger" })
            </div>
        </div>





        <div class="form-group">
            <label class="control-label col-md-2"> Type du Réclamation</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.typeReclamation, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.typeReclamation, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.objet, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.objet, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.objet, "", new { @class = "text-danger" })
            </div>
        </div>



        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

